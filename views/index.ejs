<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="css/style.css">
    <title>Country</title>
</head>
<body>
    <h1>Country</h1>
    <form action="/" method="POST">
        <select name="country">
            <% countryArr.forEach(countryArr => { %>
                <option value= "<%- countryArr.name -%>"><%- countryArr.name -%></option>
                <% console.log("Name:" + countryArr.name) %>
            <% }); %>

   
            
        </select>
        <button type="submit">Show Country Data</button>
    </form>
   <% if(countryObject)  {%> 
    <table>
        <tr>
            <th>Name:</th>
            <td><%= countryObject.name %></td>
        </tr>
        <tr>
            <th>Top Level Domain:</th>
            <td><%= countryObject.topLevelDomain %></td>
        </tr>
        <tr>
            <th>Calling Code:</th>
            <td><%= countryObject.callingCodes %></td>
        </tr>
        <tr>
            <th>Capital:</th>
            <td><%= countryObject.capital %></td>
        </tr>
        <tr>
            <th>Region:</th>
            <td><%= countryObject.region %></td>
        </tr>
        <tr>
            <th>Subregion:</th>
            <td><%= countryObject.subregion %></td>
        </tr>
        <tr>
            <th>Population:</th>
            <td><%= countryObject.population %></td>
        </tr>
        <tr>
            <th>Timezone:</th>
            <td><%= countryObject.timezones %></td>
        </tr>
        <tr>
            <th>Language in a full word in languages:</th>
            <td><%= countryObject.languages[0].name %></td>
        </tr>
        <tr>
            <th>Currency code, name and symbol:</th>
            <td><%= countryObject.currencies[0].code %></td>
        </tr>
        <tr>
            <th>A url to the flag image:</th>
            <td><img src="<%= countryObject.flag %>" width="150" height="70">
            </td>
        </tr>
    </table>
    <% } %>
</body>
</html>